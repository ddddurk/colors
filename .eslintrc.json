{
  "$schema": "http://json.schemastore.org/eslintrc",
  "extends": ["plugin:json/recommended"],
  "ignorePatterns": ["node_modules"],
  "overrides": [
    {
      "files": ["*.yaml"],
      "plugins": ["yaml"],
      "extends": ["plugin:yaml/recommended"]
    }
  ],
  "plugins": ["json", "prettier", "yaml"]
}
